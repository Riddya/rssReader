{% extends 'RSSReaderBundle::layout.html.twig' %}
{% block javascripts %}
    <script src="{{ asset('bundles/rssreader/js/dragAndDrop.js') }}"></script>
{% endblock %}
{% block title "RSS DRAG&DROP" %}

{% block content -%}
    {{ render(controller('RSSReaderBundle:Default:cloud')) }}<br>
    <a href="{{ path("rss_list") }}">To RSS List</a><br>
    <a href="{{ path("home") }}">To Home Page</a>
    <hr><hr>
    <div id="tmp" class="dragDropWrapper">
        {% for entities in temp %}
            <div class = "rssDropWrapper">
                <div data-rss-id = "{{ entities.rssId }}" class = "rss_name">{{ entities.name }}</div>
                {% for tag in entities.tag %}
                    <div class = "rss_tags" data-tag-name = "{{ tag }}">{{ tag }}</div>
                {% endfor %}
            </div>
        {% endfor %}
    </div>
{% endblock %}
