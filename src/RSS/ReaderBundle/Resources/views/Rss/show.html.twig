{% extends 'RSSReaderBundle::layout.html.twig' %}

{% block title "RSS Feeds Show" %}

{% block content %}

    <h1>Rss</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Url</th>
                <td>{{ entity.url }}</td>
            </tr>
            <tr>
                <th>Createdate</th>
                <td>{{ entity.createDate|date(dateFormat) }}</td>
            </tr>
            <tr>
                <th>Updatedate</th>
                <td>{{ entity.updateDate|date(dateFormat) }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
            <li>{{ form(delete_form) }}</li><br>
            <li>
                <a href="{{ path('rss_list') }}">
                    Back to the list
                </a>
            </li>
            <li>
                <a href="{{ path('rss_edit', { 'id': entity.id }) }}">
                    Edit
                </a>
            </li>
        </ul>
        <div class = "tags">
            {{ include('RSSReaderBundle:Rss:showTags.html.twig', { 'tags': tags }) }}
        </div>
    <div class="ui-widget">
        {{ form(tags_form) }}
    </div>
{% endblock %}
