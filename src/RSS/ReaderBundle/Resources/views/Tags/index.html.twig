{% extends 'RSSReaderBundle::layout.html.twig' %}

{% block content -%}
    <ul>
        <li>
            <a href="{{ path('tags_new') }}">
                Create a new entry
            </a>
        </li>
        <li>
            <a href="{{ path('rss_list') }}">
                RSS List
            </a>
        </li>
        <li>
            <a href="{{ path('home') }}">
                Home page
            </a>
        </li>
    </ul>
    <h1>Tags list</h1>
    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Tag</th>
                <th><a href="{{ path('rss_list') }}">Rss Name</a></th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('tags_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.tag }}</td>
                <td><a href="{{ path('rss_show', {'id': entity.rssId }) }}">{{ entity.idRss }}</a></td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('tags_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('tags_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% endblock %}
